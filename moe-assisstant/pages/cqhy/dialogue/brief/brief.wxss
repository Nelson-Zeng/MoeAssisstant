.member-container {
  height: calc(100% - 100rpx);
  overflow: scroll;
  border: 1px solid #909399;
  border-radius: 10rpx;
  box-shadow: 2px 2px 3px #909399;
  display: flex;
  flex-wrap: wrap;
}

.member-container .neoforce-member {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx;
  max-height: 300rpx;
}

.member-container .neoforce-member image {
  width: 100%;
  border-radius: 100%;
  border: 1px solide #909399;
  box-shadow: 1px 1px 2px #909399;
}

.member-container .neoforce-member text {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40rpx;
}

.footer {
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  display: flex;
  justify-content: space-between;
  width: calc(100vw - 40rpx);
}

.footer .filter {
  height: 60rpx;
  border: 1px solid #909399;
  border-radius: 10rpx;
  padding-left: 10rpx;
}

.footer .language-switch-container {
  font-size: 34rpx;
  display: flex;
  align-items: center;
}

.language-switch-container switch {
  transform: scale(0.8);
  margin-left: 10rpx;
}

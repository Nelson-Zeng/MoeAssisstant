.section {
  width: 100%;
  height: 100%;
}

.top-section {
  width: 100%;
  height: 30%;
  position: relative;
}

.top-section-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.bottom-sections {
  height: calc(70% - 4px);
  display: flex;
  margin-top: 4px;
  justify-content: space-between;
  margin-left: -10rpx;
  margin-right: -10rpx;
}

.bottom-section {
  height: 100%;
  margin: 0 10rpx;
  flex-grow: 1;
  position: relative;
  border: 3rpx solid #C0C4CC;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 6rpx #C0C4CC;
  overflow: hidden;
}

.bottom-section-title {
  font-family: 'Qing Ning You Yuan';
  position: absolute;
  font-size: 48rpx;
  width: 48rpx;
  color: white;
  padding: 10rpx;
  background: rgba(48, 48, 51, 0.6);
  border-bottom-right-radius: 10rpx;
}

.bottom-section-image {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(30deg, rgba(96, 98, 130, 0.08) 15%, transparent 25%, transparent 75%, rgba(96, 98, 130, 0.08) 85%);
}

.container {
  padding: unset;
  width: 100%;
  overflow: scroll;
}

.navigator {
  font-size: 28rpx;
  position: relative;
  min-width: 100%;
  background-color: #909399;
  display: flex;
  width: 100%;
  height: 60rpx;
}

.navigator .first-grade-item {
  position: absolute;
  background: #606266;
  height: inherit;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: calc(100vw / 8);
  border-bottom: 1px solid #303133;
}

.navigator .first-grade-item:first-child {
  z-index: 10 !important;
  border-left: unset !important;
}

.navigator .first-grade-item::before {
  content: '';
  position: absolute;
  right: -26rpx;
  top: 0;
  width: 0;
  height: 0;
  border-left: 26rpx solid #606266;
  border-top: 60rpx solid transparent;
  box-sizing: border-box;
  z-index: 10;
}

.navigator .first-grade-item::after {
  content: '';
  position: absolute;
  right: -30rpx;
  top: 0;
  width: 0;
  height: 0;
  border-left: 30rpx solid #303133;
  border-top: 60rpx solid transparent;
  box-sizing: border-box;
  box-shadow: 0 2rpx 0 #303133;
  z-index: 9;
}

.navigator .selected {
  z-index: 10;
  border-bottom: 1px solid #f2f6fc;
  border-left: 1px solid #303133;
  background-color: #f2f6fc;
}

.navigator .selected::before {
  content: '';
  position: absolute;
  right: -26rpx;
  top: 0;
  width: 0;
  height: 0;
  border-left: 26rpx solid #f2f6fc;
  border-top: 60rpx solid transparent;
  box-sizing: border-box;
  z-index: 10;
}

.navigator .selected::after {
  content: '';
  position: absolute;
  right: -30rpx;
  top: 0;
  width: 0;
  height: 0;
  border-left: 30rpx solid #f2f6fc;
  border-top: 60rpx solid transparent;
  box-sizing: border-box;
  box-shadow: 0 2rpx 0 #f2f6fc;
  z-index: 9;
}

.container .content-body {
  padding: 20rpx;
}

.container .content-body .hint {
  padding: 10rpx;
  display: flex;
  justify-content: flex-end;
}

.container .content-body .map-content-item .map-title {
  font-size: 40rpx;
}

.container .content-body .map-content-item image {
  width: 100%;
  height: 250px;
}

.container .detail-map {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(48, 49, 51, 0.4);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .detail-map .map-in-big-size {
  width: 100vw;
  transform: rotate(90deg) scale(1.5);
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}
.mask {
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ship-type-dialog {
  background-color: white;
  width: 80vw;
  height: 80vh;
  border-radius: 10rpx;
  overflow: hidden;
}
.ship-size-selector {
  position: relative;
  width: 100%;
  height: 30%;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}
.size-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.ship-size-swiper {
  display: flex;
  justify-content: center;
  height: 100%;
}
.ship-size-card {
  height: 100%;
  width: 50%;
  position: relative;
  border-radius: 5rpx;
  box-shadow: 0 2rpx 10rpx 0 #606266;
}
.ship-size-image {
  height: 100%;
  width: 100%;
}
.ship-size-title {
  position: absolute;
  top: 0;
  left: 0;
  width: 1rpx;
  word-wrap: break-word;
}
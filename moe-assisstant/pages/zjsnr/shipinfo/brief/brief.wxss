.container {
  padding: unset !important;
  overflow: scroll;
  /* 微信的onReachBottom方法只有在页面高度指定为百分比的时候才可以生效 */
  height: 100%;
}

.container .setting-icon {
  display: flex;
  align-items: flex-end;
  padding-bottom: 10rpx;
  justify-content: center;
  z-index: 11;
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  background-repeat: no-repeat;
  border-radius: 100%;
  border: 1px solid #909399;
  box-sizing: border-box;
  box-shadow: 4rpx 4rpx 10rpx #909399;
  background-color: white;
  background-position: 35rpx 20rpx;
  background-size: 50rpx 50rpx;
  background-image: url('data:image/svg+xml;base64,');
}

.container .setting-icon .filter {
  color: #F56C6C;
  font-size: 28rpx;
}

.container .simple-filter {
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.container .simple-filter .search-area {
  position: relative;
  height: 60rpx;
}

.container .simple-filter .search-area .search-key {
  border: 2px solid #303133;
  height: inherit;
  line-height: 60rpx;
  border-radius: 10rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.container .simple-filter .search-area .search-icon {
  position: absolute;
  width: 80rpx;
  height: inherit;
  margin-top: 2px;
  margin-right: 2px;
  right: 0;
  top: 0;
  border-radius: 0 10rpx 10rpx 0;
  border-left: 2px solid #303133;
  box-sizing: border-box;
  background-size: 60rpx;
  background-position: 10rpx 0;
  background-repeat: no-repeat;
  background-image: url('data:image/svg+xml;base64,');
}

.container .simple-filter .sorting-area {
  margin-top: 20rpx;
}

.container .simple-filter .sorting-area .sorting-title {
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .simple-filter .sorting-area .sorting-title .sort-orientation-container {
  font-size: 24rpx;
}

.container .simple-filter .sorting-area .sorting-title .sort-orientation-container switch {
  transform: scale(0.8);
}

.container .simple-filter .sorting-area .sorting-container {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.container .simple-filter .sorting-area .sorting-container .sorting-item {
  flex-grow: 1;
  border-radius: 10rpx;
  border: 1px solid #303133;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
}

.container .simple-filter .sorting-area .sorting-container .selected {
  color: white;
  background-color: #409eff;
  border: 1px solid #409eff;
}

.container .detail-switch {
  display: flex;
  justify-content: flex-end;
  padding-right: 40rpx;
  align-items: center;
}

.container .detail-switch switch {
  transform: scale(0.7);
}

.container .ship-list {
  padding: 0 40rpx;
}

.container .ship-list .ship-item {
  height: 340rpx;
  border: 1px solid black;
  border-radius: 5px;
  position: relative;
  margin: 20rpx 0;
  font-weight: bold;
  color: #303133;
  overflow: hidden;
}

.container .ship-list .ship-item .background-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.container .ship-list .ship-item .update-icon {
  position: absolute;
  top: 0;
  right: -1px;
  height: 80rpx;
  z-index: 2;
  color: white;
  font-size: 30rpx;
  background-color: rgba(48, 49, 51, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

.container .ship-list .ship-item .update-icon .icon {
  height: 80rpx;
  width: 80rpx;
  background-size: 40rpx 40rpx;
  background-repeat: no-repeat;
  background-position: 20rpx 20rpx;
  background-image:url('data:image/svg+xml;base64,');
}

.container .ship-list .ship-item .update-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: -80rpx;
  height: 0;
  width: 0;
  border-top: 80rpx solid rgba(48, 49, 51, 0.5);
  border-left: 80rpx solid transparent;
  z-index: 2;
}

.container .ship-list .ship-item .ship-icon {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  border-radius: 5px;
}

.container .ship-list .ship-item .show-mask {
  background-image: linear-gradient(0, rgba(96, 98, 102, 0.4) 0, transparent 30%);
}

.container .ship-list .ship-item .simple-introduce {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  color: white;
  font-size: 36rpx;
}

.container .ship-list .ship-item .base-info-container {
  position: absolute;
  top: 1px;
  left: 1px;
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
  background-color: rgba(48, 49, 51, 0.4);
  display: flex;
  flex-direction: column;
  color: white;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.container .ship-list .ship-item .base-info-container label {
  flex-grow: 1;
}

.container .ship-list .reloading {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  padding-bottom: 10rpx;
  color: #909399;
}

.container .settings {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eaeff8;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  overflow: scroll;
  z-index: 11;
}

.container .settings .footer {
  position: absolute;
  display: flex;
  bottom: 20rpx;
  right: 20rpx;
}

.container .settings .footer .button {
  margin-left: 30rpx;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}

.container .settings .footer .confirm {
  background-color: #409eff;
}

.container .settings .footer .cancel {
  background-color: #909399;
}

.toast {
  position: fixed;
  top: 0;
  left: 5vw;
  right: 5vw;
  background-color: rgba(48, 49, 51, 0.4);
  border-radius: 20rpx;
  z-index: 12;
}